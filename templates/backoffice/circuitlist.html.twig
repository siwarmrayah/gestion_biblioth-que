{# templates/backoffice/circuitlist.html.twig #}

{% extends "backoffice/adminlayout.html.twig" %}

{% block title %}{{ parent() }} - Admin Circuits list{% endblock %}

{% block main %}

    <h1>Admin List of circuits</h1>

    {% if circuitslist is not empty %}
        <p>Here are all your circuits:</p>
        <ul>
        {# Loop through list and creeate the list of circuit items. #}
        {% for circuit in circuitslist %}
            <li>
          		<a href="{{ path('admin_circuitshow', { 'id' : circuit.id }) }}">{{ circuit.description }}</a>
            </li>
        {% endfor %}
        </ul>
    {% else %}
        <p>Sorry, you don't have any circuits yet!</p>
    {% endif %}
    
      <form action="{{ path('admin_circuitnew') }}" method="GET">
          <button class="btn btn-default" type="submit">New circuit</button>
      </form>
   
{% endblock %} {# main #}
